{% comment %}
  interactive-product-showcase.liquid
  ----------------------------
 This section displays an interactive product showcase.
{% endcomment %}

 <section class="interactive-product-showcase">
  <h2 class="interactive-product-showcase__title">{{ section.settings.title }}</h2>
  <p class="interactive-product-showcase__subtitle">{{ section.settings.subtitle }}</p>
  
  <div class="interactive-product-showcase__filter">
    <label for="tag-filter">Filter by Tag:</label>
    <select id="tag-filter">
      <option value="">All</option>
      <option value="bedroom">Bedroom</option>
      <option value="garden">Garden</option>
    </select>
  </div>
  
  <div class="interactive-product-showcase__products">
    {% for product in section.products %}
      <div class="interactive-product-showcase__product" data-tags="{{ product.tags | join: ' ' }}">
        <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="interactive-product-showcase__product-image">
        <h3 class="interactive-product-showcase__product-name">{{ product.title }}</h3>
        <p class="interactive-product-showcase__product-description">{{ product.description }}</p>
        <p class="interactive-product-showcase__product-price">{{ product.price | money }}</p>
        <button class="interactive-product-showcase__add-to-cart" data-product-id="{{ product.id }}">Add to Cart</button>
      </div>
    {% endfor %}
  </div>
</section>