{% assign product = card_product %}
<div class="product-card" onclick="addToCart()">
    <img srcset="
                  {%- if product.featured_media.width >= 165 -%}{{ product.featured_media | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if product.featured_media.width >= 360 -%}{{ product.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if product.featured_media.width >= 533 -%}{{ product.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
                  {%- if product.featured_media.width >= 720 -%}{{ product.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
                  {%- if product.featured_media.width >= 940 -%}{{ product.featured_media | image_url: width: 940 }} 940w,{%- endif -%}
                  {%- if product.featured_media.width >= 1066 -%}{{ product.featured_media | image_url: width: 1066 }} 1066w,{%- endif -%}
                  {{ product.featured_media | image_url }} {{ product.featured_media.width }}w
                "
            src="{{ product.featured_media | image_url: width: 533 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
            alt="{{ product.featured_media.alt | escape }}"
            class="product-card__image"
    >
    <div class="product-card__info">
        <div class="product-card__info--title">{{ product.title }}</div>
        <div class="product-card__info--prices">
            <div class="product-card__info--prices__price">{{ product.price | money }}</div>
            <div class="product-card__info--prices__wasprice">{{ product.compare_at_price | money }}</div>
        </div>
    </div>
</div>

<style>
    .product-card {
        display: flex;
        flex-direction: column;
        max-width: 100%;
        border: 1px solid #CACACA;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
    }

    .product-card__info {
        padding: 1rem;
        display: flex;
        flex-direction: column;
    }

    .product-card__image {
        width: 100%;
        aspect-ratio: 3/4;
        object-fit: cover;
        max-height: 25dvh;
        height: fit-content;
        margin-bottom: 1.5rem;
    }

    .product-card__info--prices {
        display: flex;
        gap: 1rem;
    }
    .product-card__info--prices__wasprice {
        color: #CACACA;
        text-decoration: line-through;
    }
</style>

<script>
    function addToCart() {
        let formData = {
            'items': [{
                'id': {{ product.selected_or_first_available_variant.id }},
                'quantity': 1
            }]
        };
        fetch(window.Shopify.routes.root + 'cart/add.js', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        })
            .then(response => {
                alert("product {{ product.title }} added to cart")
                console.log("product {{ product.title }} added to cart")
                return response.json();
            })
            .catch((error) => {
                console.error('Error:', error);
            });
    }
</script>